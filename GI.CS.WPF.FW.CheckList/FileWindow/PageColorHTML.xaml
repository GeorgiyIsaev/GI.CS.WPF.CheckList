<Page x:Class="GI.CS.WPF.FW.CheckList.PageColorHTML"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GI.CS.WPF.FW.CheckList"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageColorHTML">

    <Grid>
        <Grid Background="#FFE5E5E5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" >
                </ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="0,0,0,0" Background="BlueViolet"/>
            <RichTextBox HorizontalAlignment="Left" Margin="25,0,25,0" VerticalAlignment="Stretch">
                <FlowDocument>
                    <Paragraph x:Name="RTB_Head" TextAlignment="Center">
                        <Run Text="Заголовок"/>
                    </Paragraph>
                    <Paragraph x:Name="RTB_Discript" TextAlignment="Center">
                        <Run Text="Короткое описание к тексту"/>
                    </Paragraph>
                    <Paragraph Margin="10,0,0,0">                    
                        <Run x:Name="RTB_Quest" Text="Вопрос"/>
                    </Paragraph>
                    <Paragraph Margin="20,0,0,0">
                        <Run x:Name="RTB_AnswerTrueIcon1" Foreground="#FF7BB02E" Text="✔"/>
                        <Run x:Name="RTB_AnswerTrue1" Text="Верный Ответ"/>
                    </Paragraph>
                    <Paragraph Margin="20,0,0,0">
                        <Run x:Name="RTB_AnswerTrueIcon2" Foreground="#FF7BB02E" Text="✔"/>
                        <Run x:Name="RTB_AnswerTrue2" Text="Еще один верный Ответ"/>
                    </Paragraph>
                    <Paragraph Margin="20,0,0,0">
                        <Run x:Name="RTB_AnswerFalseIcon1" Text="&#10008;"/>
                        <Run x:Name="RTB_AnswerFalse1" Text="Не верный Ответ"/>
                    </Paragraph>
                    <Paragraph Margin="20,0,0,0">
                        <Run x:Name="RTB_AnswerFalseIcon2" Text="&#10008;"/>
                        <Run x:Name="RTB_AnswerFalse2" Text="Еще один не верный Ответ"/>
                    </Paragraph>
                    <Paragraph Margin="10,0,0,0">
                        <Run x:Name="RTB_Comment" Text="Пояснение к вопросу"/>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>



            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackPanel Grid.Row="0"  Orientation="Horizontal">
                    <TextBlock Margin="10,8,5,5" Text="Описание: " VerticalAlignment="Top" Height="21" Width="150" FontWeight="Normal" FontSize="14"/>
                    <ToggleButton x:Name="Button_head_G" Content="Ж" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Bold" FontSize="14" Click="ButtonClick_CSS" RenderTransformOrigin="5.49,2.289"/>
                    <ToggleButton x:Name="Button_head_I" Content="К" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Normal" FontSize="14" FontStyle="Italic" Click="ButtonClick_CSS"/>
                    <ToggleButton x:Name="Button_head_Z" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" Click="ButtonClick_CSS">
                        <TextBlock TextDecorations="Strikethrough" Text="З" FontWeight="Normal" FontSize="14" />
                    </ToggleButton>
                    <ComboBox x:Name="ComboBox_FontSize_Head" HorizontalAlignment="Left"  ToolTip="Размер шрифта"  Height="24" Margin="5,5,0,0" VerticalAlignment="Top" FontSize="14" Width="53" FontWeight="Normal" SelectionChanged="SelectionChanged_FontSize"/>
                </StackPanel>
                <!-- Описание -->
                <StackPanel Grid.Row="1"  Orientation="Horizontal">
                    <TextBlock Margin="10,8,5,5" Text="Заголовок: " VerticalAlignment="Top" Height="21" Width="150" FontWeight="Normal" FontSize="14"/>
                    <ToggleButton x:Name="Button_discript_G" Content="Ж" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Bold" FontSize="14" Click="ButtonClick_CSS" RenderTransformOrigin="5.49,2.289"/>
                    <ToggleButton x:Name="Button_discript_I" Content="К" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Normal" FontSize="14" FontStyle="Italic" Click="ButtonClick_CSS"/>
                    <ToggleButton x:Name="Button_discript_Z" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" Click="ButtonClick_CSS">
                        <TextBlock TextDecorations="Strikethrough" Text="З" FontWeight="Normal" FontSize="14" />
                    </ToggleButton>
                    <ComboBox x:Name="ComboBox_FontSizeDiscript" HorizontalAlignment="Left"  ToolTip="Размер шрифта"  Height="24" Margin="5,5,0,0" VerticalAlignment="Top" FontSize="14" Width="53" FontWeight="Normal" SelectionChanged="SelectionChanged_FontSize"/>
                </StackPanel>

                <!-- Фонг страницы -->
                <StackPanel Margin="0,5,0,0" Grid.Row="8" Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left"  Margin="10,0,5,0" Text="Боковой фон" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="21" Width="100"/>
                    <TextBlock HorizontalAlignment="Left"  Margin="10,0,5,0" Text="Главный фон" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="21" Width="100"/>
                    <TextBlock HorizontalAlignment="Left"  Margin="10,0,5,0" Text="Фон подписи" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="21" Width="100"/>
                </StackPanel>
                <StackPanel Grid.Row="9" Orientation="Horizontal">
                    <ComboBox x:Name="CB_FonFace" HorizontalAlignment="Left" Margin="10,0,5,0" VerticalAlignment="Top" Width="100"/>
                    <ComboBox x:Name="CB_Sign" HorizontalAlignment="Left" Margin="10,0,5,0" VerticalAlignment="Top" Width="100"/>
                    <ComboBox x:Name="CB_FonBack" HorizontalAlignment="Left" Margin="10,0,5,0" VerticalAlignment="Top"  Width="100"/>
                </StackPanel>
            </Grid>            
        </Grid>
    </Grid>
</Page>
