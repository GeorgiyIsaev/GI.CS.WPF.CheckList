<Page x:Class="GI.CS.WPF.FW.CheckList.PageColorHTML"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GI.CS.WPF.FW.CheckList"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageColorHTML">

    <Grid>
        <Grid Background="#FFE5E5E5">
            <Border BorderThickness="1" BorderBrush="Black" Margin="0,0,526,0" Background="BlueViolet"/>
            <TextBlock HorizontalAlignment="Left" Margin="282,7,0,0" Text="Задний фон" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="161"/>
            <ComboBox x:Name="CB_FonBack" HorizontalAlignment="Left" Margin="282,28,0,0" VerticalAlignment="Top" Width="120"/>
            <TextBlock HorizontalAlignment="Left" Margin="443,7,0,0" Text="Главный фон" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="166"/>
            <ComboBox x:Name="CB_FonFace" HorizontalAlignment="Left" Margin="437,28,0,0" VerticalAlignment="Top" Width="120"/>
            <TextBlock HorizontalAlignment="Left" Margin="589,7,-10,0" Text="Фон подписи" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="161"/>
            <ComboBox x:Name="CB_Sign" HorizontalAlignment="Left" Margin="589,28,0,0" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="CB_Shrift" HorizontalAlignment="Left" Margin="552,68,0,0" VerticalAlignment="Top" Width="71" Height="24"/>
            <TextBlock HorizontalAlignment="Left" Height="30" Margin="274,241,0,0" Text="ColorDialog не работает!" TextWrapping="Wrap" VerticalAlignment="Top" Width="466" FontSize="22" Foreground="#FFF90404" TextAlignment="Center"/>

            <TextBlock HorizontalAlignment="Left" Margin="282,71,0,0" Text="Заголовок" TextWrapping="Wrap" VerticalAlignment="Top" Height="21" Width="161" FontWeight="Normal" FontSize="14"/>
            <ToggleButton x:Name="Button_head_G" Content="Ж" HorizontalAlignment="Left" Margin="388,68,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Bold" FontSize="14" Click="ButtonClick_CSS"/>
            <ToggleButton x:Name="Button_head_I" Content="К" HorizontalAlignment="Left" Margin="425,68,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Normal" FontSize="14" FontStyle="Italic" Click="ButtonClick_CSS"/>
            <ToggleButton x:Name="Button_head_Z" Content="З" HorizontalAlignment="Left" Margin="462,68,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Normal" FontSize="14" Click="ButtonClick_CSS"/>

            <ComboBox x:Name="ComboBox_FontSize_Head" HorizontalAlignment="Left"  ToolTip="Размер шрифта"  Height="24" Margin="499,68,0,0" VerticalAlignment="Top" FontSize="14" Width="53" FontWeight="Normal" SelectionChanged="SelectionChanged_FontSize"/>
            <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="1" Margin="467,80,0,0" Stroke="Black" VerticalAlignment="Top" Width="27"/>
            <TextBlock  x:Name="TBCSS_head" HorizontalAlignment="Left" Margin="53,16,0,0" Text="Заголовок" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="160" FontWeight="Normal" FontSize="32" TextDecorations="{x:Null}" TextAlignment="Center"/>

        </Grid>
    </Grid>
</Page>
