<Page x:Class="GI.CS.WPF.FW.CheckList.PageColorHTML"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GI.CS.WPF.FW.CheckList"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageColorHTML">

    <Grid>
        <Grid Background="#FFE5E5E5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" >
                </ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>           

            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="0,0,0,0" Background="BlueViolet"/>
            <TextBlock Grid.Column="0" x:Name="TBCSS_head" HorizontalAlignment="Left" Margin="5,5,0,0" Text="Заголовок" TextWrapping="Wrap" VerticalAlignment="Top" Height="Auto" Width="160" FontWeight="Normal" FontSize="32" TextDecorations="{x:Null}" TextAlignment="Center"/>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>                

                <!-- Заголовок -->
                <StackPanel Grid.Row="2"  Orientation="Horizontal">
                    <TextBlock Margin="10,8,5,5" Text="Заголовок: " VerticalAlignment="Top" Height="21" Width="150" FontWeight="Normal" FontSize="14"/>
                    <ToggleButton x:Name="Button_head_G" Content="Ж" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Bold" FontSize="14" Click="ButtonClick_CSS" RenderTransformOrigin="5.49,2.289"/>
                    <ToggleButton Grid.Column="1" x:Name="Button_head_I" Content="К" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" FontWeight="Normal" FontSize="14" FontStyle="Italic" Click="ButtonClick_CSS"/>
                    <ToggleButton Grid.Column="1" x:Name="Button_head_Z" Margin="5,5,0,0" VerticalAlignment="Top" Width="37" Height="24" Click="ButtonClick_CSS">
                        <TextBlock TextDecorations="Strikethrough" Text="З" FontWeight="Normal" FontSize="14" />
                    </ToggleButton>

                    <ComboBox x:Name="ComboBox_FontSize_Head" HorizontalAlignment="Left"  ToolTip="Размер шрифта"  Height="24" Margin="5,5,0,0" VerticalAlignment="Top" FontSize="14" Width="53" FontWeight="Normal" SelectionChanged="SelectionChanged_FontSize"/>
                </StackPanel>
                
                <!-- Фонг страницы -->
                <StackPanel Margin="0,5,0,0" Grid.Row="8" Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Left"  Margin="10,0,5,0" Text="Боковой фон" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="21" Width="100"/>
                    <TextBlock HorizontalAlignment="Left"  Margin="10,0,5,0" Text="Главный фон" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="21" Width="100"/>
                    <TextBlock HorizontalAlignment="Left"  Margin="10,0,5,0" Text="Фон подписи" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="14" Height="21" Width="100"/>
                </StackPanel>
                <StackPanel Grid.Row="9" Orientation="Horizontal">
                    <ComboBox x:Name="CB_FonFace" HorizontalAlignment="Left" Margin="10,0,5,0" VerticalAlignment="Top" Width="100"/>
                    <ComboBox x:Name="CB_Sign" HorizontalAlignment="Left" Margin="10,0,5,0" VerticalAlignment="Top" Width="100"/>
                    <ComboBox x:Name="CB_FonBack" HorizontalAlignment="Left" Margin="10,0,5,0" VerticalAlignment="Top"  Width="100"/>
                </StackPanel>
            </Grid>            
        </Grid>
    </Grid>
</Page>
